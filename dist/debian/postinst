#!/bin/sh

# -*- mode: shell-script -*-
#
# Copyright (C) 2012 Ralf Hoppe <ralf.hoppe@ieee.org>
#
# post installation script the dfcgen-gtk Debian package
# installs icon and desktop files on Ubuntu
#
set +e

if [ -n $XDG_DATA_DIRS ]; then
    xdg-icon-resource install --mode system --size 32 /usr/share/dfcgen-gtk/pixmaps/dfcgen.png dfcgen-gtk
    xdg-desktop-menu install --mode system /usr/share/doc/dfcgen-gtk/dfcgen-gtk.desktop
fi

# do not indicate any error
set -e
exit 0
